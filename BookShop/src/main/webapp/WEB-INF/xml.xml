<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

	<!-- Insert to database -->
     <servlet>
     	<servlet-name>InsertServlet</servlet-name>
     	<servlet-class>BookShopPackage.InsertServlet</servlet-class>
     </servlet>
     <servlet-mapping>
     	<servlet-name>InsertServlet</servlet-name>
     	<url-pattern>/InsertServlet</url-pattern>
     </servlet-mapping>
     
     <!-- Display to page -->
     <servlet>
     	<servlet-name>GetAllServlet</servlet-name>
     	<servlet-class>BookShopPackage.GetAllServlet</servlet-class>
     </servlet>
     <servlet-mapping>
     	<servlet-name>GetAllServlet</servlet-name>
     	<url-pattern>/GetAllServlet</url-pattern>
     </servlet-mapping>
     
      <!-- Data update page -->
     <servlet>
     	<servlet-name>UpdateServlet</servlet-name>
     	<servlet-class>BookShopPackage.UpdateServlet</servlet-class>
     </servlet>
     <servlet-mapping>
     	<servlet-name>UpdateServlet</servlet-name>
     	<url-pattern>/UpdateServlet</url-pattern>
     </servlet-mapping>
     
      <!-- Data Delete page -->
     <servlet>
     	<servlet-name>DeleteServlet</servlet-name>
     	<servlet-class>BookShopPackage.DeleteServlet</servlet-class>
     </servlet>
     <servlet-mapping>
     	<servlet-name>DeleteServlet</servlet-name>
     	<url-pattern>/DeleteServlet</url-pattern>
     </servlet-mapping>
     
      <!-- ###########################UserSystem######################################## -->
      
      <!-- Data inserting to user table -->
	<servlet>
     	<servlet-name>UserInsertServlet</servlet-name>
     	<servlet-class>UserPackage.UserInsertServlet</servlet-class>
     </servlet>
     <servlet-mapping>
     	<servlet-name>UserInsertServlet</servlet-name>
     	<url-pattern>/UserInsertServlet</url-pattern>
     </servlet-mapping>
     
     <!-- Login validation -->
	<servlet>
     	<servlet-name>LoginServlet</servlet-name>
     	<servlet-class>UserPackage.LoginServlet</servlet-class>
     </servlet>
     <servlet-mapping>
     	<servlet-name>LoginServlet</servlet-name>
     	<url-pattern>/UserInsertServlet</url-pattern>
     </servlet-mapping>
     
     <!-- Profile data display  -->
	<servlet>
     	<servlet-name>profileServlet</servlet-name>
     	<servlet-class>UserPackage.profileServlet</servlet-class>
     </servlet>
     <servlet-mapping>
     	<servlet-name>profileServlet</servlet-name>
     	<url-pattern>/profileServlet</url-pattern>
     </servlet-mapping>
     
     <!-- Profile update   -->
	<servlet>
     	<servlet-name>UpdateProfileServlet</servlet-name>
     	<servlet-class>UserPackage.UpdateProfileServlet</servlet-class>
     </servlet>
     <servlet-mapping>
     	<servlet-name>UpdateProfileServlet</servlet-name>
     	<url-pattern>/UpdateProfileServlet</url-pattern>
     </servlet-mapping>
     
     <!-- Profile Delete function   -->
	<servlet>
     	<servlet-name>UserDeleteServlet</servlet-name>
     	<servlet-class>UserPackage.UserDeleteServlet</servlet-class>
     </servlet>
     <servlet-mapping>
     	<servlet-name>UserDeleteServlet</servlet-name>
     	<url-pattern>/UserDeleteServlet</url-pattern>
     </servlet-mapping>

</web-app>